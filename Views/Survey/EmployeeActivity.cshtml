@model List<AspNetEmployeeSurvey.Models.EmployeeDetailModel>
@{
}
<h1>Employees</h1>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>FIrst Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Delete</th>
                <th>Logs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>
                        <form id="deleteForm" method="post" asp-action="Delete" asp-controller="Survey">
                            <input type="hidden" name="email" value="@employee.Email" />
                            <div class="header-btn-container">
                                <button id="delete" class="btn btn-danger btn-sm">Delete</button>
                            </div>
                        </form>
                    </td>
                    <td>
                        <a href="@Url.Action("LogActivity", "Survey", new {id = employee.Email })">Activity</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>