@model List<AspNetEmployeeSurvey.Models.EmployeeDetailModel>
@{
}
<h1>Employees</h1>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>               
                <th>FIrst Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Assign Survey</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>
                        <a href="@Url.Action("Assign", "Survey", new {id = employee.Email } )">Assign</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>